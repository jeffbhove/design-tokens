{
  "source": [
    "tokens/aliases/**/*.json",
    "tokens/functional/**/*.json"
  ],
  "platforms": {
    "css": {
      "prefix": "trp",
      "transformGroup": "css",
      "buildPath": "dist/formats/",
      "files": [
        {
          "format": "css/variables",
          "destination": "css/variables.css"
        }
      ]
    },
    "scss": {
      "prefix": "trp",
      "transformGroup": "scss",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "size/rem",
        "color/css",
        "font/size"
      ],
      "buildPath": "dist/formats/",
      "files": [
        {
          "destination": "scss/_variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "less": {
      "prefix": "trp",
      "transformGroup": "less",
      "buildPath": "dist/formats/",
      "files": [
        {
          "destination": "less/_variables.less",
          "format": "less/variables"
        }
      ]
    },
    "json": {
      "buildPath": "dist/formats/",
      "files": [
        {
          "destination": "json/variables.json",
          "format": "json"
        }
      ]
    }
  }
}
